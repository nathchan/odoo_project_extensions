<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_account_analytic_line_tree_inherit_account_id" model="ir.ui.view">
            <field name="name">account.analytic.line.tree.account_id</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//tree" position="attributes">
                    <attribute name="editable"></attribute>
                </xpath>

                <xpath expr="//field[@name='date']" position="after">
                    <field name="timesheet_department_id" />
                    <field name="timesheet_start_time" invisible="1" />
                </xpath>

                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="project_activity_id" required="1" widget="selection" />
                    <field name="timesheet_activity_category" readonly="1" />
                </xpath>

                <xpath expr="//field[@name='account_id']" position="after">
                    <field name="timesheet_analytic_account_category" readonly="1" />
                </xpath>

                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!--<xpath expr="//tree" position="attributes">-->
                    <!--<attribute name="default_order">date asc, timesheet_start_time asc</attribute>-->
                <!--</xpath>-->

            </field>
        </record>


    </data>
</openerp>