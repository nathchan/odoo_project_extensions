<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <data>

                    <xpath expr="//field[@name='date_assign']/../.." position="after">
                        <group cols="2">
                            <group col="1" string="Package types">
                                <field name="planning_package" />
                                <field name="site_acquisition_package" />
                                <field name="civil_works_package" />
                            </group>
                            <group col="2" string="Goods ordering dates">
                                <field name="a_goods_ordered_date" />
                                <field name="b_goods_ordered_date" />
                                <field name="c_goods_ordered_date" />
                            </group>
                        </group>
                    </xpath>

                </data>
            </field>
        </record>

    </data>
</openerp>