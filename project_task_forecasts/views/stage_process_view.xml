<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record model="ir.ui.view" id="project_stage_process_tree">
            <field name="name">project.task.stage.process.tree</field>
            <field name="model">project.task.stage.process</field>
            <field name="arch" type="xml">
                <tree string="Stage process">
                    <field name="sequence" widget="handle" groups="base.group_no_one"/>
                    <field name="name"/>
                    <field name="stage_id"/>
                    <field name="info"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="project_stage_process_form">
            <field name="name">project.task.stage.process.form</field>
            <field name="model">project.task.stage.process</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="sequence" groups="base.group_no_one" />
                            <field name="name" />
                            <field name="stage_id" />
                            <field name="info" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


       <record id="action_project_stage_process" model="ir.actions.act_window">
           <field name="name">Stage processes</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">project.task.stage.process</field>
           <field name="view_type">form</field>
           <field name="view_mode">tree,form</field>
           <field name="context">{}</field>
           <field name="search_view_id" ref=""/>
       </record>


        <menuitem id="menu_project_stage_process" name="Stage processes" parent="project.menu_project_config"
                          action="action_project_stage_process" sequence="50" groups="project.group_project_manager"/>
    </data>
</openerp>