<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Task form -->
        <record id="view_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <data>

                    <xpath expr="//page[@name='description_page']" position="after">
                        <page name="site_acquisition" string="Site acquisition">

                            <group>
                                <field name="subcontractor_id" />
                            </group>

                            <field name="forecast_ids">
                                <tree string="Forecasts" editable="bottom" default_order="sequence">
                                    <field name="task_id" invisible="1"/>
                                    <field name="project_id" invisible="1" />
                                    <field name="sequence" invisible="1" />
                                    <field name="stage_id" widget="selection"/>
                                    <field name="forecast_date"/>
                                    <field name="actual_date"/>
                                </tree>
                            </field>
                        </page>

                    </xpath>

                    <xpath expr="//field[@name='tag_ids']" position="after">
                        <field name="stage_progress" widget="progressbar"/>
                    </xpath>

                    <xpath expr="//field[@name='project_id']" position="after">
                        <field name="work_package" />
                    </xpath>

                </data>
            </field>
        </record>

    </data>
</openerp>